{
  "name": "etengine",
  "version": "1.0.0",
  "description": "Email Template Engine in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "pnpm exec rimraf dist",
    "prepare": "pnpm build",
    "exc": "pnpm ts-node "
  },
  "keywords": [
    "",
    "email",
    "template"
  ],
  "author": "mdimranh",
  "license": "MIT",
  "dependencies": {
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "typescript": "^5.9.3"
  }
}
